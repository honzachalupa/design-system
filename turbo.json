{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**", ".next/**"],
            "cache": false
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "release": {
            "dependsOn": ["^build"]
        },
        "release-ci": {
            "dependsOn": ["^build"]
        }
    }
}
