{
    "name": "design-system",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint ",
        "publishx": "turbo run publishx",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "dependencies": {},
    "devDependencies": {
        "husky": "^8.0.3",
        "prettier": "^2.8.7",
        "pretty-quick": "^3.1.3",
        "turbo": "^1.8.8"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "packageManager": "yarn@1.22.19",
    "husky": {
        "hooks": {
            "pre-commit": "yarn publishx"
        }
    }
}
