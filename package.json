{
    "name": "design-system",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build-ci": "turbo run build --filter=design-system --filter=docs",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "release": "turbo run release",
        "release-ci": "turbo run release-ci",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "dependencies": {},
    "devDependencies": {
        "eslint": "^8.37.0",
        "eslint-config-next": "^13.2.4",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-turbo": "^1.8.8",
        "husky": "^8.0.3",
        "prettier": "^2.8.7",
        "pretty-quick": "^3.1.3",
        "turbo": "^1.9.3"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "packageManager": "yarn@1.22.19",
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    }
}
